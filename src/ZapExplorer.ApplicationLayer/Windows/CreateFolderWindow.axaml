<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ZapExplorer.ApplicationLayer.Windows.CreateFolderWindow"
        Title="Create Folder" Height="150" Width="300" CanResize="False" Background="#232A46">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Folder Name" Foreground="White" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="tbxFolderName" Grid.ColumnSpan="2" Grid.Row="2" Margin="10,3,10,3"/>
        <Button Content="Create" Grid.Row="3" Margin="10,3,10,3" Click="Create"/>
        <Button Content="Cancel" Grid.Row="3" Grid.Column="1" Margin="10,3,10,3" Click="Cancel"/>
    </Grid>
</Window>
